---
import { Icon } from "astro-icon/components";
---

<section class="relative z-20 px-6">
    <div class="max-w-5xl mx-auto">
        <div
            class="bg-gray-900/40 backdrop-blur-xl rounded-3xl p-8 md:p-8 flex flex-wrap justify-center md:justify-between items-center gap-8 md:gap-4"
        >
            <!-- Stats Item 1 -->
            <div class="flex flex-col items-center text-center px-4 group">
                <div
                    class="flex items-center gap-3 mb-2 transition-transform duration-300 group-hover:scale-105"
                >
                    <Icon name="lucide:briefcase" class="size-8 text-primary" />
                    <span
                        class="text-4xl md:text-5xl font-extrabold text-primary"
                    >
                        4
                    </span>
                </div>
                <span
                    class="text-gray-400 font-medium uppercase tracking-wider text-xs md:text-sm"
                >
                    Semestre
                </span>
            </div>

            <!-- Divider (md+) -->
            <div class="hidden md:block h-12 w-px bg-white/10"></div>

            <!-- Stats Item 2 -->
            <div class="flex flex-col items-center text-center px-4 group">
                <div
                    class="flex items-center gap-3 mb-2 transition-transform duration-300 group-hover:scale-105"
                >
                    <Icon
                        name="lucide:folder-code"
                        class="size-8 text-primary"
                    />
                    <span
                        class="text-4xl md:text-5xl font-extrabold text-primary"
                    >
                        0
                    </span>
                </div>
                <span
                    class="text-gray-400 font-medium uppercase tracking-wider text-xs md:text-sm"
                >
                    Proyectos Completados
                </span>
            </div>

            <!-- Divider (md+) -->
            <div class="hidden md:block h-12 w-px bg-white/10"></div>

            <!-- Stats Item 3 -->
            <div class="flex flex-col items-center text-center px-4 group">
                <div
                    class="flex items-center gap-3 mb-2 transition-transform duration-300 group-hover:scale-105"
                >
                    <div class="relative flex h-3 w-3">
                        <span
                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"
                        ></span>
                        <span
                            class="relative inline-flex rounded-full h-3 w-3 bg-green-500"
                        ></span>
                    </div>
                    <span
                        class="text-4xl md:text-5xl font-extrabold text-primary"
                    >
                        24/7
                    </span>
                </div>
                <span
                    class="text-gray-400 font-medium uppercase tracking-wider text-xs md:text-sm"
                >
                    Disponible 
                </span>
            </div>
        </div>
    </div>
</section>

<style>
    .text-primary {
        color: #1c0deb;
    }
</style>
